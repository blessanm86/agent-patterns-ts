{
  "name": "agent-patterns-ts",
  "version": "1.0.0",
  "description": "A simple ReAct agent for hotel reservations using Ollama",
  "type": "module",
  "scripts": {
    "dev:react": "tsx src/react/index.ts",
    "dev:plan-execute": "tsx src/plan-execute/index.ts",
    "dev:reasoning-tool": "tsx src/reasoning-tool/index.ts",
    "dev:tool-descriptions": "tsx src/tool-descriptions/index.ts",
    "dev:tool-descriptions:weak": "tsx src/tool-descriptions/index.ts --weak",
    "dev:memory": "tsx src/conversation-memory/index.ts",
    "dev:memory-broken": "tsx src/conversation-memory/broken.ts",
    "dev:guardrails": "tsx src/guardrails/index.ts",
    "dev:error-recovery": "tsx src/error-recovery/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "eval": "evalite run",
    "eval:watch": "evalite watch",
    "lint": "oxlint src/",
    "lint:fix": "oxlint --fix src/",
    "fmt": "oxfmt src/",
    "fmt:check": "oxfmt --check src/",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm fmt:check && pnpm lint"
  },
  "dependencies": {
    "autoevals": "^0.0.132",
    "dotenv": "^17.3.1",
    "evalite": "^0.19.0",
    "ollama": "^0.5.9"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "simple-git-hooks": "^2.13.1",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^4.0.18"
  }
}
